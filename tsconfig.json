{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
  
      "jsx": "react-jsx",
      "allowJs": true,
      "strict": true,
      "noEmit": true,
  
      "baseUrl": ".",
      "paths": { "@/*": ["src/*"] },
  
      "moduleResolution": "Bundler",
      "types": ["vite/client", "react", "react-dom"],
      "skipLibCheck": true
    },
    "include": ["src", "src/types/**/*.d.ts"],
    "exclude": ["node_modules", "dist"]
}
  