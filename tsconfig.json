{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
  
      "jsx": "react-jsx",               // <-- important for JSX
      "allowJs": true,                  // allow your .jsx files
      "strict": true,
  
      "baseUrl": ".",                   // for path alias
      "paths": { "@/*": ["src/*"] },    // for '@/...'
  
      "moduleResolution": "Bundler",
      "types": ["vite/client", "react", "react-dom"],
      "skipLibCheck": true
    },
    "include": ["src", "src/types/**/*.d.ts"]
}
  